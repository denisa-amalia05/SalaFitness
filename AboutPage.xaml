<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalaFitness.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="gym_icon.png"
                   SemanticProperties.Description="Fitness App Logo"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Fitness App" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="Welcome to the Fitness App! Manage your fitness activities with ease." />
    </VerticalStackLayout>
</ContentPage>